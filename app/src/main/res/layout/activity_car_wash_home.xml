<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.CARWASH.CarWashHomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_arrow"
                android:padding="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/arrow_back"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="CARWASH DASHBOARD"
                android:fontFamily="@font/bold"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView

            android:layout_below="@+id/topcard"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_weight="50"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            card_view:cardElevation="10dp"
            card_view:cardCornerRadius="5dp"

            >
            <RelativeLayout
                android:id="@+id/dailyW"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/cashinIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/cashin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/bold"
                    android:text="Daily Wash"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bizcard"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_weight="50"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            card_view:cardElevation="10dp"
            card_view:cardCornerRadius="5dp"
            >
            <RelativeLayout
                android:id="@+id/carwashHist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"

                android:padding="10dp">

                <ImageView
                    android:id="@+id/cashOut"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/car_wash_logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/bold"
                    android:text="History"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rooms"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/reportscard"
            android:layout_below="@+id/topcard"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="50"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            card_view:cardElevation="5dp"
            card_view:cardCornerRadius="5dp"
            >
            <RelativeLayout
                android:id="@+id/newsPapers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/rept"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/newspapers"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rept"
                    android:fontFamily="@font/bold"
                    android:text="Settings"
                    android:textAlignment="center"
                    android:textColor="@color/Red"
                    android:textSize="18dp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Manage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="50"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            card_view:cardElevation="5dp"
            card_view:cardCornerRadius="5dp"
            >
            <RelativeLayout
                android:id="@+id/pool"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/set"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/pool" />

                <TextView
                    android:id="@+id/ptitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set"
                    android:fontFamily="@font/bold"
                    android:text="Others"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>