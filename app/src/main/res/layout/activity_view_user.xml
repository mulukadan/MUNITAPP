<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.SYSUSERS.ViewUserActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"

        >
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SYSTEM USER"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"
            android:textSize="15dp"
            />
        <ImageView
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/ProfilePic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/user"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="0dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#8BC34A"
            app:civ_shadow_radius="0"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:layout_weight="10"
            android:textSize="18dp"
            android:text="Full name: M-Unit User"
            android:layout_below="@+id/ProfilePic"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/name"
            android:layout_marginTop="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/userLevelTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Level: Admin"
                    android:textAlignment="center"
                    android:fontFamily="@font/medium"
                    android:layout_marginTop="3dp"
                    />
                <TextView
                    android:id="@+id/userStatusTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Status: Active"
                    android:textAlignment="center"
                    android:fontFamily="@font/medium"
                    android:layout_marginTop="3dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/editBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="#0CCBE5"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:paddingTop="10dp"
                        android:fontFamily="@font/medium"
                        android:text="Edit"/>
                    <TextView
                        android:id="@+id/activateDeactivateUser"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:paddingTop="10dp"
                        android:fontFamily="@font/medium"
                        android:background="#F3341A"
                        android:text="Activate"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="210dp"
            android:background="#ffffff"
            android:paddingTop="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:layout_weight="10"
                    android:textSize="18dp"
                    android:text="Phone:"
                    />
                <TextView
                    android:id="@+id/PhoneNo"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:layout_weight="10"
                    android:textSize="18dp"
                    android:text="072000000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:layout_weight="10"
                    android:textSize="18dp"
                    android:text="Username:"
                    />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:layout_weight="10"
                    android:textSize="18dp"
                    android:text="abc@m-unit.com"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:layout_weight="10"
                    android:textSize="18dp"
                    android:text="Password:"/>
                <TextView
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:layout_weight="10"
                    android:textSize="18dp"
                    android:text="*********"
                    />
                <ImageButton
                    android:id="@+id/showPassword"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/eye"
                    android:background="#ffffff"
                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/sendPwdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                >
                <TextView
                    android:layout_toLeftOf="@id/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Login Details to the User"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    />
                <ImageButton
                    android:id="@+id/reset"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/message"
                    android:background="#ffffff"/>


            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>