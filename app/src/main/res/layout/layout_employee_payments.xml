<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    card_view:cardCornerRadius="10dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    app:ignore="NamespaceTypo"
    card_view:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/UserView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/dateTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:text="Date: 12/12/2020"
                    android:layout_weight="6"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:background="#03A9F4"
                    android:textColor="#ffffff" />
                <TextView
                    android:id="@+id/payAmtTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:background="#F44336"
                    android:layout_weight="4"
                    android:text="Salary" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:fontFamily="@font/medium"
                    android:textColor="#000000"
                    android:text="Initial Advance" />
                <TextView
                    android:id="@+id/initialAdvTotalTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:layout_weight="5"
                    android:textColor="#000000"
                    android:text="Ksh. 2000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/biz2Layout"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/medium"
                        android:textColor="#000000"
                        android:text="Advance Total" />
                    <TextView
                        android:id="@+id/currentAdvTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:layout_weight="5"
                        android:textColor="#000000"
                        android:text="Ksh. 2000" />
                </LinearLayout>
                <TextView
                    android:id="@+id/descTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="#575252"
                    android:text="Reason" />

            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>

</androidx.cardview.widget.CardView>
