<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:elevation="10dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    app:ignore="NamespaceTypo"
    card_view:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/UserView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/profilePic"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:text="Date: 12/12/2020"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:background="@color/colorAccent"
                android:textColor="#ffffff" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/Table1Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:fontFamily="@font/medium"
                    android:textColor="@color/colorPrimary"
                    android:text="BLUE TABLE" />
                <TextView
                    android:id="@+id/Table1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:layout_weight="5"
                    android:text="Ksh. 1000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/Table2Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:fontFamily="@font/medium"
                    android:textColor="@color/colorAccent"
                    android:text="RED TABLE" />
                <TextView
                    android:id="@+id/Table2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:layout_weight="5"
                    android:text="Ksh. 1000" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:background="@color/Grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:fontFamily="@font/medium"
                    android:textColor="#000000"
                    android:text="TOTAL" />
                <TextView
                    android:id="@+id/Total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:layout_weight="5"
                    android:textColor="#000000"
                    android:text="Ksh. 2000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/biz2Layout"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/Table3Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/medium"
                        android:textColor="#00813A"
                        android:text="GREEN TABLE 2" />
                    <TextView
                        android:id="@+id/Table3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:layout_weight="5"
                        android:text="Ksh. 1000" />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/Grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:fontFamily="@font/medium"
                        android:textColor="#000000"
                        android:text="TOTAL" />
                    <TextView
                        android:id="@+id/GrantTotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:layout_weight="5"
                        android:textColor="#000000"
                        android:text="Ksh. 2000" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>

</androidx.cardview.widget.CardView>
