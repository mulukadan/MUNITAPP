<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:scaleType = "centerCrop"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/adminSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/bold"
                        android:textColor="#FFFFFF"
                        android:text="M-Unit Comps"/>


                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:foregroundGravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:id="@+id/notificationImg">

                        <ImageView
                            android:id="@+id/notification"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/alert"
                            />

                        <TextView
                            android:id="@+id/NotificationCount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:foregroundGravity="center"
                            android:fontFamily="@font/medium"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/ProfilePic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/user"
                        app:civ_border_color="#EEEEEE"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="#8BC34A"
                        app:civ_shadow_radius="0" />
                    <TextView
                        android:id="@+id/greetings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ProfilePic"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/white"
                        android:text="Good Morning!"/>
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/greetings"
                        android:layout_toRightOf="@+id/ProfilePic"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/regular"
                        android:text="Name: "/>

                </RelativeLayout>

            </android.support.design.widget.AppBarLayout>


            <FrameLayout
                android:id="@+id/container"
                android:layout_below="@+id/header"
                android:layout_width="match_parent"
                android:layout_marginTop="140dp"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        >
                        <LinearLayout
                            android:id="@+id/Rooms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            >
                            <android.support.v7.widget.CardView

                                android:layout_below="@+id/topcard"
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:layout_weight="50"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                card_view:cardElevation="10dp"
                                card_view:cardCornerRadius="5dp"

                                >
                                <RelativeLayout
                                    android:id="@+id/sales"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:padding="10dp">
                                    <ImageView
                                        android:id="@+id/cashinIcon"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/cashin"
                                        android:layout_centerHorizontal="true"
                                        />
                                    <TextView
                                        android:layout_alignParentBottom="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Sales"
                                        android:textAlignment="center"
                                        android:textSize="18dp"
                                        android:textColor="@color/colorPrimary"
                                        android:fontFamily="@font/bold"
                                        />


                                </RelativeLayout>


                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/bizcard"
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:layout_weight="50"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_alignParentRight="true"
                                card_view:cardElevation="10dp"
                                card_view:cardCornerRadius="5dp"
                                >
                                <RelativeLayout
                                    android:id="@+id/PhoneBoonRl"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="true"

                                    android:padding="10dp">
                                    <ImageView
                                        android:id="@+id/cashOut"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/cashout"
                                        android:layout_centerHorizontal="true"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/cashOut"
                                        android:text="Expense"
                                        android:textAlignment="center"
                                        android:textSize="18dp"
                                        android:textColor="@color/Red"
                                        android:fontFamily="@font/bold"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:weightSum="10"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="5"
                                            android:layout_marginRight="5dp"
                                            android:background="?android:attr/selectableItemBackground"
                                            android:src="@drawable/add"/>
                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="5"
                                            android:layout_marginLeft="5dp"
                                            android:background="?android:attr/selectableItemBackground"
                                            android:src="@drawable/eye"/>

                                    </LinearLayout>
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/action"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Rooms"
                            android:orientation="horizontal"
                            >
                            <android.support.v7.widget.CardView
                                android:id="@+id/reportscard"
                                android:layout_below="@+id/topcard"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_weight="50"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                card_view:cardElevation="5dp"
                                card_view:cardCornerRadius="5dp"
                                >
                                <RelativeLayout
                                    android:id="@+id/UsersRl"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:padding="10dp">
                                    <ImageView
                                        android:id="@+id/rept"
                                        android:layout_width="80dp"
                                        android:layout_height="100dp"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/newspapers"/>
                                    <TextView
                                        android:id="@+id/title"
                                        android:layout_below="@+id/rept"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="NewsPapers"
                                        android:textAlignment="center"
                                        android:textSize="18dp"
                                        android:textColor="@color/Red"
                                        android:fontFamily="@font/bold"
                                        />

                                </RelativeLayout>


                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/Manage"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_weight="50"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"

                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_alignParentRight="true"
                                card_view:cardElevation="5dp"
                                card_view:cardCornerRadius="5dp"
                                >
                                <RelativeLayout
                                    android:id="@+id/pool"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:padding="10dp">
                                    <ImageView
                                        android:id="@+id/set"
                                        android:layout_width="80dp"
                                        android:layout_height="100dp"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/pool"/>
                                    <TextView
                                        android:id="@+id/ptitle"
                                        android:layout_below="@+id/set"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Pool Table"
                                        android:textAlignment="center"
                                        android:textSize="18dp"
                                        android:textColor="@color/colorPrimary"
                                        android:fontFamily="@font/bold"
                                        />
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>
                        <android.support.v7.widget.CardView
                            android:id="@+id/bottomcard"
                            android:layout_below="@+id/action"
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            card_view:cardElevation="10dp"
                            card_view:cardCornerRadius="10dp"

                            >
                            <RelativeLayout
                                android:id="@+id/logo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/logo"
                                />

                        </android.support.v7.widget.CardView>



                    </RelativeLayout>
                </ScrollView>

            </FrameLayout>

        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:itemTextColor="@color/colorPrimary"
            app:itemIconTint="@color/Red"
            app:menu="@menu/drawer_menu"
            android:layout_gravity = "start"
            >

        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>

    <View
        android:id="@+id/dimmer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80ffffff"
        android:alpha="0"
        android:visibility="gone"/>

</RelativeLayout>